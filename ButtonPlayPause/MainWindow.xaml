<Window x:Class="ButtonPlayPause.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpfTestBench="clr-namespace:ButtonPlayPause"
        Title="MainWindow" Height="350" Width="525">
    <Button Width="40" Height="40" Click="Button_OnClick">
        <Button.Template>
            <ControlTemplate TargetType="{x:Type Button}">
                <Grid>
                    <Ellipse Stroke="Black" />

                    <Image Source="playback_play.png" Visibility="{Binding Path=IsPlaying, 
                    Converter={wpfTestBench:BoolToVisibilityConverter}, 
                    ConverterParameter={x:Static Visibility.Hidden}}" />

                    <Image Source="playback_pause.png" Visibility="{Binding Path=IsPlaying, 
                    Converter={wpfTestBench:BoolToVisibilityConverter}, 
                    ConverterParameter={x:Static Visibility.Visible}}" />
                </Grid>
            </ControlTemplate>
        </Button.Template>
    </Button>
</Window>
